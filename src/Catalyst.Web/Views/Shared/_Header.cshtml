@model Catalyst.Web.Models.Shared.NavTab
@using Constants = Catalyst.Web.Constants;
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Catalyst People Problem</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="/"@(Model.Url.Equals(Constants.HomeRoute) ? " class=active" : string.Empty)>Home</a></li>
                <li><a href="/people/"@(Model.Url.Equals(Constants.PeopleRoute) ? " class=active" : string.Empty)>People</a></li>
                @if (Model.Url.StartsWith("/person/"))
                {
                    <li><a href="@Model.Url" class="person-detail">@Model.Title</a></li>
                }
            </ul>
            
            <form class="navbar-form navbar-right" action="/people/" method="get">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" name="q" id="person-search" placeholder="Search for...">
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-secondary" value="Go!" />
                    </span>
                </div>
            </form>
            
        </div>
    </div>
</div>