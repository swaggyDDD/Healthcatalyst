@model Catalyst.Web.Areas.Editors.Models.SocialLinksEditor

@using (Html.BeginForm("Save", "SocialLinksEditor", FormMethod.Post, new { @id = "social-links-editor" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Facebook, new { @class = "control-label" }) 
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-facebook-square" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.Facebook, new { @class = "form-control", placeholder = "Facebook" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Twitter, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-twitter-square" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.Twitter, new { @class = "form-control", placeholder = "Twitter" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.LinkedIn, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-linkedin-square" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.LinkedIn, new { @class = "form-control", placeholder = "LinkedIn" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.GooglePlus, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-google-plus-square" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.GooglePlus, new { @class = "form-control", placeholder = "Google+" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.YouTube, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-youtube-square" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.YouTube, new { @class = "form-control", placeholder = "YouTube" })
        </div>
    </div>

    <div class="form-group text-right">
        <button type="button" class="btn btn-default btn-cancel">Cancel</button>
        <input type="submit" class="btn btn-default" value="Save"/>
    </div>
    @Html.HiddenFor(x => x.PersonId)
    @Html.HiddenFor(x => x.PropertyId)
    @Html.HiddenFor(x => x.ReturnUrl)
}