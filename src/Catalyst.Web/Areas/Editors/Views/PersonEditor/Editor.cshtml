@model Catalyst.Web.Areas.Editors.Models.PersonEditor

@using (Html.BeginForm("Save", "PersonEditor", FormMethod.Post, new { @id = "person-entry" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.FirstName, new { @class = "control-label" }) 
        @Html.ValidationMessageFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LastName, new { @class = "control-label" })
        @Html.ValidationMessageFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Last name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Birthday, new { @class = "control-label" })
        @Html.ValidationMessageFor(x => x.Birthday)
        @Html.TextBoxFor(x => x.Birthday, new { @class = "form-control"})
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(x => x.Watch)
            Watch this person.
        </label>
    </div>
    <div class="form-group text-right">
        @if (!Model.PersonId.Equals(Guid.Empty))
        {
            <button type="button" class="btn btn-default btn-cancel">Cancel</button>  
        }
        <input type="submit" class="btn btn-default" value="Save"/>
    </div>
    @Html.HiddenFor(x => x.PersonId)
    @Html.HiddenFor(x => x.ReturnUrl)
}
